{
  "name": "Gossiperl Chrome client",
  "description": "Gossiperl Chrome client - sample application",
  "manifest_version": 2,
  "version": "0.1",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "sockets": {
     "udp": { "bind": "*", "send": "*" }
  },
  "permissions": [ "system.network", "webview" ],
  "icons": { "128": "assets/icon-128.png", "16": "assets/icon-16.png" }
}
